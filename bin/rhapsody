#!/usr/bin/env bash

bundle_name='phpguild/rhapsody-bundle'

vendor_path=$(dirname $(dirname $(readlink -f "$0")))
install_path="${vendor_path}/${bundle_name}/install"
project_path="$(pwd)"
action="${1}"

if [[ "install" = "${action}" ]]; then
    echo "Install ${bundle_name}"
    cp -vfr ${install_path}/* "${project_path}"
fi
